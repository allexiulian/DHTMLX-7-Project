<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Employee-manager</display-name>
  
  

<servlet>
<servlet-name>viewemployee</servlet-name>
<servlet-class>com.servlet.ViewEmployeeServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>vacation</servlet-name>
<servlet-class>com.servlet.VacationServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>login</servlet-name>
<servlet-class>com.servlet.LoginServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>admin</servlet-name>
<servlet-class>com.servlet.AdminServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>logout</servlet-name>
<servlet-class>com.servlet.LogoutServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>csvservlet</servlet-name>
<servlet-class>com.servlet.CsvServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>account</servlet-name>
<servlet-class>com.servlet.AccountServlet</servlet-class>
</servlet>


<servlet-mapping>
<servlet-name>viewemployee</servlet-name>
<url-pattern>/viewemployee</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>vacation</servlet-name>
<url-pattern>/vacation</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>login</servlet-name>
<url-pattern>/login</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>admin</servlet-name>
<url-pattern>/admin</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>logout</servlet-name>
<url-pattern>/logout</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>csvservlet</servlet-name>
<url-pattern>/csv</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>account</servlet-name>
<url-pattern>/account</url-pattern>
</servlet-mapping>

<session-config>
		<session-timeout>30</session-timeout>
</session-config>

  
</web-app>